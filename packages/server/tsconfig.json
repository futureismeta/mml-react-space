{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "es2022",
    "jsx": "react",
    "lib": ["es2022", "dom"],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noEmit": true,
    "baseUrl": "."
  },
  "include": [
    "./src/**/*.ts",
    "src/types/express-ws.d.ts"
  ]
}
